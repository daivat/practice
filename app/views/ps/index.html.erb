<h1>Listing Practice Sessions</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ps.each do |p| %>
      <tr>
        <td><%= p.description %></td>
        <td><%= link_to 'Show', p %></td>
        <td><%= link_to 'Edit', edit_p_path(p) %></td>
        <td><%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Practice Session', new_p_path %>
